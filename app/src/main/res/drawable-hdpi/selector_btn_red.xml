<!-- 红色按钮-->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false" android:alpha="0.7" >
        <shape>
            <solid android:color="#ff0000"/>
            <corners android:radius="5dp"/>
        </shape>                 
    </item>
    
