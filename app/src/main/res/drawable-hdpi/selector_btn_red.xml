    <item android:state_focused="true" >
        <shape>
            <stroke android:color="#a0a0a0" android:width="1dp"/>
            <solid android:color="#a0a0a0"/>
            <corners android:radius="5dp"/>
        </shape>
    </item>

    <item android:state_pressed="true" >
        <shape>
            <solid android:color="#9F1938"/>
            <corners android:radius="5dp"/>
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="#ff4040"/>
            <corners android:radius="5dp"/>
        </shape>
    </item>
</selector>